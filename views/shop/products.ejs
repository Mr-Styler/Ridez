<%- include ('../partials/header') %>
    <title>Ridez</title>
</head>
<body>
    <%- include ('../partials/nav') %>
    <h1>Ridez-Products page</h1>
    <div id="products">
        
    <%- include ('../partials/products-nav') %>
    <% Products.forEach( product => { %>
            <div class="col-sm-4 col-md-3 col-lg-2" style=" text-align:center;">
                        <div><img class="profilePic" src="<%= product.image %>"></div>
                        <h3 name="">
                            <%= product.title %>
                        </h3>
                        <div class="row">
                            <a class="btn btn-danger col-sm-6 col-md-6 col-lg-6" href="/product/<%= product._id %>">Details</a>
                            <form class="col-sm-6 col-md-6 col-lg-6" action="/cart" method="post">
                                <input type="submit" value="Add to Cart" class="btn btn-danger" >
                                <input type="text" name="productId" value="<%= product._id %>" hidden>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            </form>
                        </div>
                        
                    </div>
        <% }) %>
    </div>
<%- include ('../partials/pagination') %>
    
<%- include ('../partials/footer') %>