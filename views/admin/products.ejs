<%- include ('../partials/header') %>
    <title>Ridez</title>
</head>
<body>
    <%- include ('../partials/admin-nav') %>
    
    <%- include ('../partials/products-nav') %>
    <h1>Ridez-Admin-Products page</h1>
    <a href="/admin/products/new" class="btn">Create new</a>
    <div id="products">
        <% Products.forEach( product => { %>
            <div>
                <img src="<%= product.image %>" alt="">
                <h3><%= product.title %></h3>
                <a class="btn" href="/admin/products/<%= product._id %>/edit">Edit</a>
                    <input type="button" onclick="deleteProduct(this)" class="btn" value="Delete">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="productId" value="<%= product._id %>">
            </div>
        <% }) %>
    </div>
    <%- include ('../partials/pagination') %>

<%- include ('../partials/footer') %>

<script src="../../scripts/admin.js"></script>