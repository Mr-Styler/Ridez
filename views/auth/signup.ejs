<%- include ('../partials/header') %>
    <title>Ridez</title>
</head>
<body>
    <h1>Ridez-SignUp page</h1>
    <div>
        <% if (errorMsg) { %>
            <div><%= errorMsg %></div>
        <% } %>
        <form action="/signUp" method="post" novalidate>
            <input class="<%= validationErrors.find(e => e.param === 'username') ? 'btn btn-danger' : '' %>" type="text" name="username" id="Uname" placeholder="Username" value="<%= oldInput.username %>">
            <input class="<%= validationErrors.find(e => e.param === 'email') ? 'btn btn-danger' : '' %>" type="email" name="email" id="Email" placeholder="Email" value="<%= oldInput.email %>">
            <input class="<%= validationErrors.find(e => e.param === 'password') ? 'btn btn-danger' : '' %>" type="password" name="password" id="Upass" placeholder="Password" value="<%= oldInput.password %>">
            <input class="<%= validationErrors.find(e => e.param === 'Rpassword') ? 'btn btn-danger' : '' %>" type="password" name="Rpassword" id="Rpass" placeholder="Rewrite Password" value="<%= oldInput.Rpassword %>">
            <select name="sex" id="gender">
                <option value="" selected>gender</option>
                <option value="male">male</option>
                <option value="female">female</option>
            </select>
            <input type="submit" value="Sign Up">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    </div>
<%- include ('../partials/footer') %>